{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Visit Schema",
    "definitions": {
        "dom": {
            "type": "string",
            "examples": [
                "h1.layout-region__title",
                "#top",
                "[data-title=\"Begin Here\"]"
            ]
        },
        "match": {
            "type": "string",
            "pattern": "^\/.+\/",
            "examples": [
                "/\\d+ items in cart/i"
            ]
        }
    },
    "type": "array",
    "items": {
        "type": "object",
        "required": [
            "url"
        ],
        "additionalProperties": false,
        "properties": {
            "url": {
                "type": "string",
                "examples": [
                    "/",
                    "/foo",
                    "/foo?do=re"
                ],
                "pattern": "^/"
            },
            "expect": {
                "type": "integer",
                "examples": [
                    200,
                    403,
                    404
                ],
                "default": 200
            },
            "find": {
                "type": "array",
                "default": [],
                "items": {
                    "oneOf": [
                        {
                            "type": "string",
                            "default": "",
                            "examples": [
                                "foo"
                            ],
                            "pattern": "^.+$"
                        },
                        {
                            "type": "object",
                            "required": [
                                "match"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "match": {
                                    "$ref": "#/definitions/match"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "dom",
                                "expect"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "dom": {
                                    "$ref": "#/definitions/dom"
                                },
                                "expect": {
                                    "type": [
                                        "string",
                                        "integer"
                                    ],
                                    "examples": [
                                        "My Front Page",
                                        1
                                    ]
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "dom",
                                "match"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "dom": {
                                    "$ref": "#/definitions/dom"
                                },
                                "match": {
                                    "$ref": "#/definitions/match"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "dom",
                                "count"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "dom": {
                                    "$ref": "#/definitions/dom"
                                },
                                "count": {
                                    "type": [
                                        "integer",
                                        "string"
                                    ],
                                    "examples": [
                                        1
                                    ]
                                }
                            }
                        }
                    ]
                }
            }
        }
    }
}
