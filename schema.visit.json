{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Visit Schema",
    "definitions": {
        "url": {
            "type": "string",
            "examples": [
                "/",
                "/foo",
                "/foo?do=re"
            ],
            "pattern": "^/|http"
        },
        "dom": {
            "type": "string",
            "pattern": "^.+$",
            "examples": [
                "h1.layout-region__title",
                "#top",
                "[data-title=\"Begin Here\"]"
            ]
        },
        "xpath": {
            "type": "string",
            "pattern": "^.+$",
            "examples": [
                ".layout-region__title[2]"
            ]
        },
        "attribute": {
            "type": "string",
            "pattern": "^.+$",
            "examples": [
                "value",
                "data-foo",
                "class"
            ]
        },
        "count": {
            "oneOf": [
                {
                    "type": "integer",
                    "examples": [
                        1
                    ]
                },
                {
                    "type": "string",
                    "pattern": "^(>|>=|<|<=)\\s*\\d+$",
                    "examples": [
                        ">= 10",
                        "<= 10",
                        "> 10",
                        "< 5"
                    ]
                }
            ]
        },
        "contains": {
            "type": "string",
            "examples": [
                "My Front Page"
            ]
        },
        "text": {
            "type": "string",
            "examples": [
                "My Front Page"
            ]
        },
        "exact": {
            "type": [
                "string",
                "integer"
            ],
            "examples": [
                "My Front Page",
                1
            ]
        },
        "match": {
            "type": "string",
            "pattern": "^\/.+\/",
            "examples": [
                "/\\d+ items in cart/i"
            ]
        },
        "property": {
            "type": "string",
            "pattern": "^.+$"
        },
        "string": {
            "title": "Search by string (using contains)",
            "type": "string",
            "pattern": "^.+$"
        },
        "page_contains": {
            "title": "ASSERT_CONTAINS",
            "type": "object",
            "required": ["contains"],
            "additionalProperties": false,
            "properties": {
                "contains": {
                    "$ref": "#/definitions/contains"
                }
            }
        },
        "page_match": {
            "title": "ASSERT_CONTAINS",
            "type": "object",
            "required": ["match"],
            "additionalProperties": false,
            "properties": {
                "match": {
                    "$ref": "#/definitions/match"
                }
            }
        },
        "search_without_modifiers": {
            "title": "SEARCH_DOM|SEARCH_XPATH",
            "type": "object",
            "additionalProperties": false,
            "oneOf": [
                {
                    "required": [
                        "dom",
                        "contains"
                    ]
                },
                {
                    "required": [
                        "dom",
                        "exact"
                    ]
                },
                {
                    "required": [
                        "dom",
                        "match"
                    ]
                },
                {
                    "required": [
                        "dom",
                        "count"
                    ]
                },
                {
                    "required": [
                        "dom",
                        "text"
                    ]
                },
                {
                    "required": [
                        "xpath",
                        "contains"
                    ]
                },
                {
                    "required": [
                        "xpath",
                        "exact"
                    ]
                },
                {
                    "required": [
                        "xpath",
                        "match"
                    ]
                },
                {
                    "required": [
                        "xpath",
                        "count"
                    ]
                },
                {
                    "required": [
                        "xpath",
                        "text"
                    ]
                }
            ],
            "properties": {
                "dom": {
                    "$ref": "#/definitions/dom"
                },
                "xpath": {
                    "$ref": "#/definitions/xpath"
                },
                "contains": {
                    "$ref": "#/definitions/contains"
                },
                "exact": {
                    "$ref": "#/definitions/exact"
                },
                "match": {
                    "$ref": "#/definitions/match"
                },
                "count": {
                    "$ref": "#/definitions/count"
                },
                "text": {
                    "$ref": "#/definitions/text"
                }
            }
        },
        "modifier_attribute": {
            "title": "MODIFIER_ATTRIBUTE",
            "type": "object",
            "additionalProperties": false,
            "oneOf": [
                {
                    "required": [
                        "dom",
                        "attribute",
                        "contains"
                    ]
                },
                {
                    "required": [
                        "dom",
                        "attribute",
                        "exact"
                    ]
                },
                {
                    "required": [
                        "dom",
                        "attribute",
                        "match"
                    ]
                },
                {
                    "required": [
                        "dom",
                        "attribute",
                        "count"
                    ]
                },
                {
                    "required": [
                        "dom",
                        "attribute",
                        "text"
                    ]
                },
                {
                    "required": [
                        "xpath",
                        "attribute",
                        "contains"
                    ]
                },
                {
                    "required": [
                        "xpath",
                        "attribute",
                        "exact"
                    ]
                },
                {
                    "required": [
                        "xpath",
                        "attribute",
                        "match"
                    ]
                },
                {
                    "required": [
                        "xpath",
                        "attribute",
                        "count"
                    ]
                },
                {
                    "required": [
                        "xpath",
                        "attribute",
                        "text"
                    ]
                }
            ],
            "properties": {
                "dom": {
                    "$ref": "#/definitions/dom"
                },
                "xpath": {
                    "$ref": "#/definitions/xpath"
                },
                "contains": {
                    "$ref": "#/definitions/contains"
                },
                "exact": {
                    "$ref": "#/definitions/exact"
                },
                "match": {
                    "$ref": "#/definitions/match"
                },
                "attribute": {
                    "$ref": "#/definitions/attribute"
                }
            }
        },
        "modifier_property": {
            "title": "MODIFIER_PROPERTY",
            "type": "object",
            "additionalProperties": false,
            "oneOf": [
                {
                    "required": [
                        "style",
                        "property",
                        "contains"
                    ]
                },
                {
                    "required": [
                        "style",
                        "property",
                        "exact"
                    ]
                },
                {
                    "required": [
                        "style",
                        "property",
                        "match"
                    ]
                },
                {
                    "required": [
                        "style",
                        "property",
                        "count"
                    ]
                },
                {
                    "required": [
                        "style",
                        "property",
                        "text"
                    ]
                }
            ],
            "properties": {
                "style": {
                    "$ref": "#/definitions/dom"
                },
                "contains": {
                    "$ref": "#/definitions/contains"
                },
                "exact": {
                    "$ref": "#/definitions/exact"
                },
                "match": {
                    "$ref": "#/definitions/match"
                },
                "property": {
                    "$ref": "#/definitions/property"
                }
            }
        }
    },
    "type": "array",
    "items": {
        "type": "object",
        "oneOf": [
            {
                "required": [
                    "visit"
                ]
            },
            {
                "required": [
                    "url"
                ]
            }
        ],
        "additionalProperties": true,
        "properties": {
            "visit": {
                "$ref": "#/definitions/url"
            },
            "url": {
                "$ref": "#/definitions/url"
            },
            "js": {
                "type": "boolean",
                "description": "Set this to true if you need javascript to run on the page."
            },
            "expect": {
                "type": "integer",
                "examples": [
                    200,
                    403,
                    404
                ],
                "default": 200
            },
            "location": {
                "$ref": "#/definitions/url"
            },
            "find": {
                "type": "array",
                "default": [],
                "items": {
                    "oneOf": [
                        {
                            "$ref": "#/definitions/string"
                        },
                        {
                            "$ref": "#/definitions/page_contains"
                        },
                        {
                            "$ref": "#/definitions/page_match"
                        },
                        {
                            "$ref": "#/definitions/search_without_modifiers"
                        },
                        {
                            "$ref": "#/definitions/modifier_attribute"
                        },
                        {
                            "$ref": "#/definitions/modifier_property"
                        }
                    ]
                }
            }
        }
    }
}
