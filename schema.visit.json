{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Visit Schema",
    "definitions": {
        "url": {
            "type": "string",
            "examples": [
                "/",
                "/foo",
                "/foo?do=re"
            ],
            "pattern": "^/|http"
        },
        "dom": {
            "type": "string",
            "examples": [
                "h1.layout-region__title",
                "#top",
                "[data-title=\"Begin Here\"]"
            ]
        },
        "xpath": {
            "type": "string",
            "examples": [
                ".layout-region__title[2]"
            ]
        },
        "count": {
            "oneOf": [
                {
                    "type": "integer",
                    "examples": [
                        1
                    ]
                },
                {
                    "type": "string",
                    "pattern": "^(>|>=|<|<=)\\s*\\d+$",
                    "examples": [
                        ">= 10",
                        "<= 10",
                        "> 10",
                        "< 5"
                    ]
                }
            ]
        },
        "contains": {
            "type": "string",
            "examples": [
                "My Front Page"
            ]
        },
        "text": {
            "type": "string",
            "examples": [
                "My Front Page"
            ]
        },
        "exact": {
            "type": [
                "string",
                "integer"
            ],
            "examples": [
                "My Front Page",
                1
            ]
        },
        "match": {
            "type": "string",
            "pattern": "^\/.+\/",
            "examples": [
                "/\\d+ items in cart/i"
            ]
        }
    },
    "type": "array",
    "items": {
        "type": "object",
        "required": [
            "url"
        ],
        "additionalProperties": false,
        "properties": {
            "url": {
                "$ref": "#/definitions/url"
            },
            "js": {
                "type": "boolean",
                "description": "Set this to true if you need javascript to run on the page."
            },
            "expect": {
                "type": "integer",
                "examples": [
                    200,
                    403,
                    404
                ],
                "default": 200
            },
            "location": {
                "$ref": "#/definitions/url"
            },
            "find": {
                "type": "array",
                "default": [],
                "items": {
                    "oneOf": [
                        {
                            "type": "string",
                            "default": "",
                            "examples": [
                                "foo"
                            ],
                            "pattern": "^.+$"
                        },
                        {
                            "type": "object",
                            "required": [
                                "match"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "match": {
                                    "$ref": "#/definitions/match"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "contains"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "contains": {
                                    "$ref": "#/definitions/contains"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "dom",
                                "text"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "dom": {
                                    "$ref": "#/definitions/dom"
                                },
                                "text": {
                                    "$ref": "#/definitions/text"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "dom",
                                "exact"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "dom": {
                                    "$ref": "#/definitions/dom"
                                },
                                "exact": {
                                    "$ref": "#/definitions/exact"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "dom",
                                "contains"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "dom": {
                                    "$ref": "#/definitions/dom"
                                },
                                "contains": {
                                    "$ref": "#/definitions/contains"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "dom",
                                "match"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "dom": {
                                    "$ref": "#/definitions/dom"
                                },
                                "match": {
                                    "$ref": "#/definitions/match"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "dom",
                                "count"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "dom": {
                                    "$ref": "#/definitions/dom"
                                },
                                "count": {
                                    "$ref": "#/definitions/count"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "xpath",
                                "text"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "xpath": {
                                    "$ref": "#/definitions/xpath"
                                },
                                "text": {
                                    "$ref": "#/definitions/text"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "xpath",
                                "exact"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "xpath": {
                                    "$ref": "#/definitions/xpath"
                                },
                                "exact": {
                                    "$ref": "#/definitions/exact"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "xpath",
                                "match"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "xpath": {
                                    "$ref": "#/definitions/xpath"
                                },
                                "match": {
                                    "$ref": "#/definitions/match"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "xpath",
                                "contains"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "xpath": {
                                    "$ref": "#/definitions/xpath"
                                },
                                "contains": {
                                    "$ref": "#/definitions/contains"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "xpath",
                                "count"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "xpath": {
                                    "$ref": "#/definitions/xpath"
                                },
                                "count": {
                                    "$ref": "#/definitions/count"
                                }
                            }
                        }
                    ]
                }
            }
        }
    }
}
