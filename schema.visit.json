{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Visit Schema",
    "definitions": {
        "url": {
            "type": "string",
            "examples": [
                "/",
                "/foo",
                "/foo?do=re"
            ],
            "pattern": "^/|http"
        },
        "dom": {
            "type": "string",
            "pattern": ".+",
            "examples": [
                "h1.layout-region__title",
                "#top",
                "[data-title=\"Begin Here\"]"
            ]
        },
        "xpath": {
            "type": "string",
            "pattern": ".+",
            "examples": [
                ".layout-region__title[2]"
            ]
        },
        "attribute": {
            "type": "string",
            "pattern": ".+",
            "examples": [
                "value",
                "data-foo",
                "class"
            ]
        },
        "count": {
            "oneOf": [
                {
                    "type": "integer",
                    "examples": [
                        1
                    ]
                },
                {
                    "type": "string",
                    "pattern": "^(>|>=|<|<=)\\s*\\d+$",
                    "examples": [
                        ">= 10",
                        "<= 10",
                        "> 10",
                        "< 5"
                    ]
                }
            ]
        },
        "contains": {
            "type": "string",
            "examples": [
                "My Front Page"
            ]
        },
        "text": {
            "type": "string",
            "examples": [
                "My Front Page"
            ]
        },
        "exact": {
            "type": [
                "string",
                "integer"
            ],
            "examples": [
                "My Front Page",
                1
            ]
        },
        "match": {
            "type": "string",
            "pattern": "^\/.+\/",
            "examples": [
                "/\\d+ items in cart/i"
            ]
        }
    },
