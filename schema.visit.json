{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Visit Schema",
    "definitions": {
        "url": {
            "type": "string",
            "examples": [
                "/",
                "/foo",
                "/foo?do=re"
            ],
            "pattern": "^/|http"
        },
        "js": {
            "type": "boolean",
            "description": "Set this to true if you need javascript to run on the page."
        },
        "find": {
            "oneOf": [
                {
                    "type": "string",
                    "match": ".+"
                },
                {
                    "type": "array",
                    "default": [],
                    "items": {
                        "oneOf": [
                            {
                                "$ref": "#/definitions/string"
                            },
                            {
                                "$ref": "#/definitions/page_contains"
                            },
                            {
                                "$ref": "#/definitions/page_not_contains"
                            },
                            {
                                "$ref": "#/definitions/page_match"
                            },
                            {
                                "$ref": "#/definitions/dom"
                            },
                            {
                                "$ref": "#/definitions/javascript"
                            },
                            {
                                "$ref": "#/definitions/style"
                            },
                            {
                                "$ref": "#/definitions/xpath"
                            }
                        ]
                    }
                }
            ]
        },
        "expect": {
            "type": "integer",
            "examples": [
                200,
                403,
                404
            ],
            "default": 200
        },
        "attribute": {
            "type": "string",
            "pattern": "^.+$",
            "examples": [
                "value",
                "data-foo",
                "class"
            ]
        },
        "count": {
            "oneOf": [
                {
                    "type": "integer",
                    "examples": [
                        1
                    ]
                },
                {
                    "type": "string",
                    "pattern": "^(>|>=|<|<=)\\s*\\d+$",
                    "examples": [
                        ">= 10",
                        "<= 10",
                        "> 10",
                        "< 5"
                    ]
                }
            ]
        },
        "none": {
            "type": "string",
            "examples": [
                "[audio:card:123]"
            ]
        },
        "contains": {
            "type": "string",
            "examples": [
                "My Front Page"
            ]
        },
        "text": {
            "type": "string",
            "examples": [
                "My Front Page"
            ]
        },
        "exact": {
            "type": [
                "string",
                "integer"
            ],
            "examples": [
                "My Front Page",
                1
            ]
        },
        "match": {
            "type": "string",
            "pattern": "^/.+/",
            "examples": [
                "/\\d+ items in cart/i"
            ]
        },
        "string": {
            "title": "Search by string (using contains)",
            "type": "string",
            "pattern": "^.+$"
        },
        "page_contains": {
            "title": "ASSERT_CONTAINS",
            "type": "object",
            "required": [
                "contains"
            ],
            "additionalProperties": false,
            "properties": {
                "contains": {
                    "$ref": "#/definitions/contains"
                }
            }
        },
        "page_not_contains": {
            "title": "ASSERT_NOT_CONTAINS",
            "type": "object",
            "required": [
                "none"
            ],
            "additionalProperties": false,
            "properties": {
                "none": {
                    "$ref": "#/definitions/none"
                }
            }
        },
        "page_match": {
            "title": "ASSERT_CONTAINS",
            "type": "object",
            "required": [
                "match"
            ],
            "additionalProperties": false,
            "properties": {
                "match": {
                    "$ref": "#/definitions/match"
                }
            }
        }
    },
    "type": "array",
    "items": {
        "type": "object",
        "oneOf": [
            {
                "required": [
                    "visit"
                ],
                "additionalProperties": false,
                "properties": {
                    "js": {
                        "$ref": "#/definitions/js"
                    },
                    "visit": {
                        "$ref": "#/definitions/url"
                    },
                    "expect": {
                        "$ref": "#/definitions/expect"
                    },
                    "location": {
                        "$ref": "#/definitions/url"
                    },
                    "find": {
                        "$ref": "#/definitions/find"
                    }
                }
            },
            {
                "required": [
                    "visit"
                ],
                "additionalProperties": false,
                "properties": {
                    "js": {
                        "$ref": "#/definitions/js"
                    },
                    "visit": {
                        "$ref": "#/definitions/url"
                    },
                    "expect": {
                        "$ref": "#/definitions/expect"
                    },
                    "redirect": {
                        "$ref": "#/definitions/url"
                    },
                    "find": {
                        "$ref": "#/definitions/find"
                    }
                }
            },
            {
                "required": [
                    "url"
                ],
                "additionalProperties": false,
                "properties": {
                    "js": {
                        "$ref": "#/definitions/js"
                    },
                    "url": {
                        "$ref": "#/definitions/url"
                    },
                    "expect": {
                        "$ref": "#/definitions/expect"
                    },
                    "location": {
                        "$ref": "#/definitions/url"
                    },
                    "find": {
                        "$ref": "#/definitions/find"
                    }
                }
            },
            {
                "required": [
                    "url"
                ],
                "additionalProperties": false,
                "properties": {
                    "js": {
                        "$ref": "#/definitions/js"
                    },
                    "url": {
                        "$ref": "#/definitions/url"
                    },
                    "expect": {
                        "$ref": "#/definitions/expect"
                    },
                    "redirect": {
                        "$ref": "#/definitions/url"
                    },
                    "find": {
                        "$ref": "#/definitions/find"
                    }
                }
            }
        ]
    }
}
