{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Config Schema",
    "type": "object",
    "required": [
        "base_url"
    ],
    "additionalProperties": false,
    "properties": {
        "base_url": {
            "title": "Base URL",
            "type": "string",
            "default": "",
            "examples": [
                "https://www.mywebsite.com",
                "http://mywebsite.local"
            ],
            "pattern": "^(http|https|localhost):.+$"
        },
        "stop_on_failed_test": {
            "type": "boolean"
        },
        "stop_on_failed_suite": {
            "type": "boolean"
        },
        "js": {
            "type": "boolean"
        },
        "chrome": {
            "type": "string"
        },
        "suites_to_ignore": {
            "description": "A list of suite filenames that will be ignored by run_suite() when this configuration is used.  This allows you to write a suite called live_only.yml that can be skipped by your config.dev.yml file.",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "users": {
            "title": "Users",
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "pass"
                ],
                "properties": {
                    "name": {
                        "title": "Username",
                        "type": "string",
                        "default": "",
                        "examples": [
                            "uber"
                        ],
                        "pattern": ".+"
                    },
                    "pass": {
                        "title": "Password",
                        "type": "string",
                        "default": "",
                        "examples": [
                            "foo"
                        ],
                        "pattern": ".+"
                    }
                }
            }
        }
    }
}
