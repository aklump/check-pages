{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Suite Schema",
    "description": "Defines the schema for a single test suite.",
    "definitions": {
        "why": {
            "type": "string",
            "examples": [
                "Assert the page title is present on the page."
            ],
            "pattern": ".+"
        },
        "extras": {
            "type": "object",
            "description": "An object for arbitrary data that can be stashed by plugins to be later read in the test flow."
        },
        "url": {
            "type": "string",
            "examples": [
                "/",
                "/foo",
                "/foo?do=re",
                "${someUrl}"
            ],
            "pattern": "^/|http|\\${"
        },
        "js": {
            "type": "boolean",
            "description": "Set this to true if you need javascript to run on the page."
        },
        "find": {
            "oneOf": [
                {
                    "type": "string",
                    "matches": ".+"
                },
                {
                    "type": "array",
                    "default": [],
                    "items": {
                        "oneOf": [
                            {
                                "$ref": "#/definitions/string"
                            },
                            {
                                "$ref": "#/definitions/page_contains"
                            },
                            {
                                "$ref": "#/definitions/page_not_contains"
                            },
                            {
                                "$ref": "#/definitions/page_match"
                            }
                        ]
                    }
                }
            ]
        },
        "expect": {
            "type": "integer",
            "examples": [
                200,
                403,
                404
            ],
            "default": 200
        },
        "attribute": {
            "type": "string",
            "pattern": ".+",
            "examples": [
                "value",
                "data-foo",
                "class"
            ]
        },
        "not_contains": {
            "type": "string",
            "examples": [
                "[audio:card:123]"
            ]
        },
        "contains": {
            "type": "string",
            "examples": [
                "My Front Page"
            ]
        },
        "text": {
            "type": "string",
            "examples": [
                "My Front Page"
            ]
        },
        "user": {
            "type": "string",
            "examples": [
                "testbot"
            ]
        },
        "equals": {
            "type": [
                "string",
                "integer"
            ],
            "examples": [
                "My Front Page",
                1
            ]
        },
        "matches": {
            "type": "string",
            "pattern": "^/.+/",
            "examples": [
                "/\\d+ items in cart/i"
            ]
        },
        "string": {
            "title": "Search by string (using contains)",
            "type": "string",
            "pattern": ".+"
        },
        "page_contains": {
            "title": "ASSERT_CONTAINS",
            "type": "object",
            "required": [
                "contains"
            ],
            "additionalProperties": false,
            "properties": {
                "why": {
                    "$ref": "#/definitions/why"
                },
                "contains": {
                    "$ref": "#/definitions/contains"
                }
            }
        },
        "page_not_contains": {
            "title": "ASSERT_NOT_CONTAINS",
            "type": "object",
            "required": [
                "not contains"
            ],
            "additionalProperties": false,
            "properties": {
                "why": {
                    "$ref": "#/definitions/why"
                },
                "not contains": {
                    "$ref": "#/definitions/contains"
                }
            }
        },
        "page_match": {
            "title": "ASSERT_CONTAINS",
            "type": "object",
            "required": [
                "matches"
            ],
            "additionalProperties": false,
            "properties": {
                "why": {
                    "$ref": "#/definitions/why"
                },
                "matches": {
                    "$ref": "#/definitions/matches"
                }
            }
        }
    },
    "type": "array",
    "items": {
        "type": "object",
        "anyOf": [
            {
                "required": [
                    "why"
                ],
                "additionalProperties": false,
                "properties": {
                    "extras": {
                        "$ref": "#/definitions/extras"
                    },
                    "why": {
                        "$ref": "#/definitions/why"
                    }
                }
            },
            {
                "required": [
                    "visit"
                ],
                "additionalProperties": false,
                "properties": {
                    "extras": {
                        "$ref": "#/definitions/extras"
                    },
                    "why": {
                        "$ref": "#/definitions/why"
                    },
                    "user": {
                        "$ref": "#/definitions/user"
                    },
                    "js": {
                        "$ref": "#/definitions/js"
                    },
                    "visit": {
                        "$ref": "#/definitions/url"
                    },
                    "expect": {
                        "$ref": "#/definitions/expect"
                    },
                    "location": {
                        "$ref": "#/definitions/url"
                    },
                    "find": {
                        "$ref": "#/definitions/find"
                    }
                }
            },
            {
                "required": [
                    "visit"
                ],
                "additionalProperties": false,
                "properties": {
                    "extras": {
                        "$ref": "#/definitions/extras"
                    },
                    "why": {
                        "$ref": "#/definitions/why"
                    },
                    "user": {
                        "$ref": "#/definitions/user"
                    },
                    "js": {
                        "$ref": "#/definitions/js"
                    },
                    "visit": {
                        "$ref": "#/definitions/url"
                    },
                    "expect": {
                        "$ref": "#/definitions/expect"
                    },
                    "redirect": {
                        "$ref": "#/definitions/url"
                    },
                    "find": {
                        "$ref": "#/definitions/find"
                    }
                }
            },
            {
                "required": [
                    "url"
                ],
                "additionalProperties": false,
                "properties": {
                    "extras": {
                        "$ref": "#/definitions/extras"
                    },
                    "why": {
                        "$ref": "#/definitions/why"
                    },
                    "user": {
                        "$ref": "#/definitions/user"
                    },
                    "js": {
                        "$ref": "#/definitions/js"
                    },
                    "url": {
                        "$ref": "#/definitions/url"
                    },
                    "expect": {
                        "$ref": "#/definitions/expect"
                    },
                    "location": {
                        "$ref": "#/definitions/url"
                    },
                    "find": {
                        "$ref": "#/definitions/find"
                    }
                }
            },
            {
                "required": [
                    "url"
                ],
                "additionalProperties": false,
                "properties": {
                    "extras": {
                        "$ref": "#/definitions/extras"
                    },
                    "why": {
                        "$ref": "#/definitions/why"
                    },
                    "user": {
                        "$ref": "#/definitions/user"
                    },
                    "js": {
                        "$ref": "#/definitions/js"
                    },
                    "url": {
                        "$ref": "#/definitions/url"
                    },
                    "expect": {
                        "$ref": "#/definitions/expect"
                    },
                    "redirect": {
                        "$ref": "#/definitions/url"
                    },
                    "find": {
                        "$ref": "#/definitions/find"
                    }
                }
            },
            {
                "required": [
                    "url",
                    "request"
                ],
                "additionalProperties": false,
                "properties": {
                    "extras": {
                        "$ref": "#/definitions/extras"
                    },
                    "why": {
                        "$ref": "#/definitions/why"
                    },
                    "user": {
                        "$ref": "#/definitions/user"
                    },
                    "url": {
                        "$ref": "#/definitions/url"
                    },
                    "request": {
                        "$ref": "#/definitions/request_request"
                    },
                    "expect": {
                        "$ref": "#/definitions/expect"
                    },
                    "find": {
                        "$ref": "#/definitions/find"
                    }
                }
            },
            {
                "required": [
                    "visit",
                    "request"
                ],
                "additionalProperties": false,
                "properties": {
                    "extras": {
                        "$ref": "#/definitions/extras"
                    },
                    "why": {
                        "$ref": "#/definitions/why"
                    },
                    "user": {
                        "$ref": "#/definitions/user"
                    },
                    "visit": {
                        "$ref": "#/definitions/url"
                    },
                    "request": {
                        "$ref": "#/definitions/request_request"
                    },
                    "expect": {
                        "$ref": "#/definitions/expect"
                    },
                    "find": {
                        "$ref": "#/definitions/find"
                    }
                }
            }
        ]
    }
}
